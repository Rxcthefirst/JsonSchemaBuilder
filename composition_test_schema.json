{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/composition-test.schema.json",
  "title": "Composition Test Schema",
  "description": "Schema with composition keywords to test preview output",
  "allOf": [
    {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "age": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["name"]
    },
    {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    }
  ]
}